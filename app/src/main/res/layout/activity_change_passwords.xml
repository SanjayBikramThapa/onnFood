<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangePasswords"
    android:background="@color/backGround">

    <TextView
        android:id="@+id/tvChangePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/startMargin"
        android:layout_marginTop="60dp"
        android:shadowColor="#FFFFFF"
        android:text="Change Password"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingHorizontal="24dp"
        android:paddingVertical="15dp"
        app:layout_constraintTop_toTopOf="parent"
        />


    <TextView
        android:id="@+id/tvoldpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/startMargin"
        android:layout_marginVertical="30dp"
        android:text="Enter Old Password"
        android:textColor="@color/black"
        android:textSize="@dimen/textSize2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvChangePassword" />


    <EditText
        android:id="@+id/etOldPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/marginLeft"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_textcolor"
        android:hint="Old Password"
        android:paddingHorizontal="20dp"
        android:paddingVertical="@dimen/paddingVertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvoldpassword"/>

    <TextView
        android:id="@+id/tvNewPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/startMargin"
        android:text="Enter New Password"
        android:textColor="@color/black"
        android:textSize="@dimen/textSize2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/etOldPassword" />

    <EditText
        android:id="@+id/etNewPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/marginLeft"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_textcolor"
        android:hint="New Password"
        android:paddingHorizontal="20dp"
        android:paddingVertical="@dimen/paddingVertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvNewPassword"/>

    <TextView
        android:id="@+id/tvConfirmPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/startMargin"
        android:layout_marginVertical="30dp"
        android:text="Confirm New Password"
        android:textColor="@color/black"
        android:textSize="@dimen/textSize2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/etNewPassword" />

    <EditText
        android:id="@+id/etConfirmPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/marginLeft"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_textcolor"
        android:hint="Conform Password"
        android:paddingHorizontal="20dp"
        android:paddingVertical="@dimen/paddingVertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvConfirmPassword"/>


    <Button
        android:id="@+id/btChangePassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Reset"
        android:textStyle="bold"
        android:textColor="#111111"
        app:backgroundTint="@color/theme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="@dimen/marginLeft"
        app:layout_constraintTop_toBottomOf="@id/etConfirmPassword" />

</androidx.constraintlayout.widget.ConstraintLayout>