<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeliveryAddress"
    android:background="@color/backGround">


    <TextView
        android:id="@+id/tvAddYourLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/marginLeft"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="80dp"
        android:shadowColor="#FFFFFF"
        android:text="Add your location"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingHorizontal="24dp"
        android:paddingVertical="15dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/tvDeliveryAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/marginLeft"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_textcolor"
        android:hint="Chitwan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvAddYourLocation"
        android:paddingHorizontal="24dp"
        android:paddingVertical="@dimen/paddingVertical"/>



    <Button
        android:id="@+id/btaddAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Add"
        android:textStyle="bold"
        android:textColor="#111111"
        app:backgroundTint="@color/theme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDeliveryAddress"
        android:layout_marginHorizontal="@dimen/marginLeft"
        android:paddingVertical="10sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>