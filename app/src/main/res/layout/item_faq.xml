<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:paddingVertical="9dp"
    android:layout_marginVertical="1dp">

    <TextView
        android:id="@+id/tvQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:drawableStart="@drawable/question"
        android:layout_marginHorizontal="10dp"
        android:text="What is Onn food ?"
        android:drawablePadding="15dp"
        android:textColor="@color/black"
        android:textSize="@dimen/textSize1"
        android:layout_marginVertical="8dp"/>

    <TextView
        android:id="@+id/tvAnswer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvQuestion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="OnnFood is the online food delivery application for foodies. Here you can search for your favourite restaurant reviews."
        android:gravity="fill_horizontal"
        android:textSize="@dimen/textSize1"
        android:paddingStart="49dp"
        android:layout_marginVertical="2dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>