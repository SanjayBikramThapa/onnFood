<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen"
    android:background="@drawable/burger">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/backGround_Opacity">
    </LinearLayout>

    <ImageView
        android:id="@+id/imgVeg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/burger"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="280dp"
        />

    <ImageView
        android:id="@+id/imgNonVeg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/burger"
        app:layout_constraintStart_toEndOf="@id/imgVeg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="280dp"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/burger"
        app:layout_constraintStart_toEndOf="@id/imgNonVeg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="280dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WelCome to a OnnFood"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="18dp"
        android:drawableStart="@drawable/minus"
        android:drawableEnd="@drawable/minus"
        android:paddingVertical="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgNonVeg"
        android:layout_marginTop="30dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>